# File name: main1.py
#:kivy 1.9.1

<CustLabel@Label>:
    color: 0, 0, 0, 1

<CustLabelA@Label>:
    color: 0, 0, 0.4, 1

<CustLabelB@Label>:
    color: 0, 0, 0, 1
    font_size: 60

<CustTitle@Label>:
    color: 0.4,0,0,1
    markup: True
    bold: True

<Button>:
    text: "Set"
    background_color: 0,0.2,0.8,0.6



ScreenManagement:
    transition: FadeTransition()
    ControlScreenLayout:
    ScreenLayout:

<ControlScreenLayout>:
    name: 'controlScreen'
    orientation: "vertical"
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: "vertical"
        height: 20
        width: 30

#Current Sonar Readings
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .30
            size_hint_y: 1
            CustTitle:
                text:'Current Sonar Readings'
            #TODO sonar Readings

        BoxLayout:
            orientation: "vertical"
            size_hint_x: .30
            size_hint_y: 1
            CustTitle:
                text: 'Controls for Ebot'
            Button:
                text: 'Forward'
                on_press: root.forward()
            Button:
                text: 'Backwards'
                on_press: root.backwards()
            Button:
                text: 'Turn Left'
                on_press: root.left()
            Button:
                text: 'Turn Right'
                on_press: root.right()
            Button:
                text: 'Stop'
                on_press: root.stop()
    BoxLayout:
        orientation: 'horizontal'
        size_hint_x: 0.5
        size_hint_y: 0.3
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .30
            Button:
                text: 'Controls'
                on_press: root.nextscreen()


<ScreenLayout>:
    name: 'infoScreen'
    orientation: "horizontal"
    padding: 10
    spacing: 10

    # ---------- Holds Slider for both temperatures ----------
    BoxLayout:
        orientation: "vertical"
        height: 20
        width: 30

#Image Feed
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .30
            size_hint_y: 1

            CustTitle:
                text: 'Image Feed'
            #TODO Video/Image widgets


    BoxLayout:
        orientation: "horizontal"
        size_hint_x: 0.5
        size_hint_y: 0.3
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .30
            Button:
                text: 'Run'
                # color: 1,0,0,1
                on_press: root.starter()
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .30
            Button:
                text: 'Controls'
                on_press: root.nextscreen()
